@model IEnumerable<ASP.NET_CORE_Final_2019.Models.Sanpham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" style="background-image:url('/images/p9.jpg')">Loại Sản Phẩm</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                <th>
                                    Id Sản Phẩm
                                </th>
                                <th>
                                    Tên Sản Phẩm
                                </th>
                                <th>
                                    Loại Sản Phẩm
                                </th>
                                <th>
                                    Nhà Cung Cấp
                                </th>
                                <th>
                                    Trạng Thái
                                </th>
                                <th>
                                    Hình Ảnh
                                </th>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Ten</td>
                                            <td>@item.IdLoaiSanPham</td>
                                            <td>@</td>
                                            <td>@item.TrangThai</td>
                                            <td><img src="@item.HinhAnh" style="width:auto;height:30%"></td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>